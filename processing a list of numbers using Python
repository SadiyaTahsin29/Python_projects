nums = [1, 2, 3, 4, 5, 6]
result = list(
    map(lambda x: x ** 2, 
        filter(lambda x: x % 2 == 0, nums))
)
print(result)  # Output: [4, 16, 36]




from pipe import select, where

nums = [1, 2, 3, 4, 5, 6]
result = list(
    nums | 
    where(lambda x: x % 2 == 0) | 
    select(lambda x: x ** 2)
)
print(result)  # Output: [4, 16, 36]
