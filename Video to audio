import os
import tkinter as tk
from tkinter import filedialog
from moviepy.editor import VideoFileClip

class VideoToAudioConverter:
    def __init__(self):
        self.root = tk.Tk()
        self.root.withdraw()  # Hide the main window
        
    def select_video(self):
        return filedialog.askopenfilename(
            title="Select Video File",
            filetypes=[("Video files", "*.mp4 *.avi *.mov *.mkv"), ("All files", "*.*")]
        )
    
    def select_save_location(self):
        return filedialog.asksaveasfilename(
            title="Save Audio As",
            defaultextension=".mp3",
            filetypes=[("MP3 files", "*.mp3"), ("All files", "*.*")]
        )
    
    def convert_video_to_audio(self, video_path, output_path):
        try:
            # Load the video
            print(f"Loading video: {video_path}")
            video = VideoFileClip(video_path)
            
            # Extract audio
            print("Extracting audio...")
            audio = video.audio
            
            # Save audio file
            print(f"Saving audio to: {output_path}")
            audio.write_audiofile(output_path)
            
            # Clean up
            video.close()
            
            print("\nConversion completed successfully! ðŸŽ‰")
            return True
        except Exception as e:
            print(f"An error occurred: {str(e)}")
            return False

def main():
    # Ensure moviepy is installed
    try:
        import moviepy
    except ImportError:
        print("Installing required package: moviepy")
        os.system("pip install moviepy")
        print("Installation completed!")
    
    converter = VideoToAudioConverter()
    
    while True:
        print("\n=== Video to Audio Converter ===")
        print("1. Select video and convert to audio")
        print("2. Exit")
        
        choice = input("Enter your choice (1 or 2): ")
        
        if choice == '1':
            # Select video file
            video_path = converter.select_video()
            if not video_path:
                print("No video selected.")
                continue
            
            # Select save location
            output_path = converter.select_save_location()
            if not output_path:
                print("No save location selected.")
                continue
            
            # Perform conversion
            converter.convert_video_to_audio(video_path, output_path)
            
        elif choice == '2':
            print("Thank you for using the converter!")
            break
        else:
            print("Invalid choice. Please try again.")

if __name__ == "__main__":
    main()
